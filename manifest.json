{
  "manifest_version": 2,

  "name": "Degallerify",
  "description": "This extension will convert all instances of imgur.com/gallery/ links to direct links",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png"
  },
  "permissions": [
   "activeTab",
   "pageCapture",
   "http://*/*","https://*/*"
   ],
   "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["content_script.js"]
  }
]
}